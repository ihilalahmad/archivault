<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <RelativeLayout
        android:id="@+id/main_card"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_color"
        android:padding="2dp"
        >

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Project Title Here"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/color_card"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_project_details"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Open Project"
                android:textColor="@color/color_white"
                android:textSize="16sp"
                android:background="@drawable/btn_project_details_bg"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="110dp"
        android:background="@color/cardview_btn_color"
        android:layout_toLeftOf="@id/main_card"/>

</RelativeLayout>